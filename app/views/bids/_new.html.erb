<div class="form-inputs">
  <h4>Place your bid</h4>
  <%= simple_form_for [ @listing_deal, @bid ], method: :post, url: listing_deal_bids_path(@listing_deal) do |f| %>
    <%= f.error_notification %>
    <%= f.input :amount,
                hint: 'Must be higher than the minimum bid',
                required: true,
                label: false,
                placeholder: 'e.g. Â£500',
                class: 'form-inline' %>
    <%= f.input :description,
                label: false,
                placeholder: 'Any extras?',
                class: 'form-inline' %>
    <div class="form-actions">
      <%= f.button :submit, "Place bid", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
