<div class="listing-index">
  <h1>All Listing Deals</h1>
  <div class="listing-deals">
    <% @listing_deals.each do |listing_deal| %>
      <ul>
        <li><h4><%= listing_deal.user.name %></h4></li>
        <li>Product: <%= listing_deal.product.name %></li>
        <li>Volume Required: <%= listing_deal.volume %></li>
        <li>Start Date: <%= listing_deal.start_date %></li>
        <li>End Date: <%= listing_deal.end_date %></li>
        <li>Minimum Bid: Â£<%= listing_deal.min_amount %></li>
        <li>Other Requirements: <%= listing_deal.other_requirements %></li>
      </ul>
      <%= link_to 'View', listing_deal_path(listing_deal.id) %>
    <% end %>
  </div>
  <div class="index-page-links">
    <% if current_user.is_venue %>
      <%= link_to 'Create a Listing', new_listing_deal_path %>
    <% end %>
    <%= link_to 'Back to home', root_path %>
  </div>

</div>
