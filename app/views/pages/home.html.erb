<div class="banner-info">
  <div class="container">
    <div class="row py-5">
      <div class="col-xs-12 col-sm-6">
        <h1 class=" banner-heading">A better way for bars and brands to do business.ÃŸ</h1>
        <p class="mt-4 banner-text">The online auction where bars can tender their listings deals and brands can bid for them.</p>
        <div class="mt-5">
          <%= link_to listing_deals_path do %>
            <button class="btn btn-dark">View listings</button>
          <% end %>

          <% if current_user %>
            <%= link_to current_user do %>
              <button class="btn btn-light ml-2">Your listings</button>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path do %>
              <button class="btn btn-light ml-2">Get started</button>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= image_tag "bartender.png", class: "banner-image" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="mt-5">
    <h1 class="text-center">Popular Tenders</h1>
    <div class="row">
      <% @listing_sample = ListingDeal.all.sample(3) %>
      <% @listing_sample.each do |listing| %>
        <div class="col-4 mt-4">
          <div class="card shadow">
            <div class="card-body ml-2">
              <div class="card-text">
                <!-- need link -->
                <h2 class="auction-link"><%= link_to listing.user.name %></h2>
                <!-- we will need to change this to latest bid! -->
                <p> Current bid: <%= listing.min_amount %></p>
                <button class="btn btn-primary">Join auction</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
